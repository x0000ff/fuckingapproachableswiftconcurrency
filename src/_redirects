# Language-based redirects for Netlify
# These use Accept-Language header detection to route users to the correct language

# Spanish
/  /es/  302  Language=es

# Portuguese (Brazil) - matches pt-BR and generic pt
/  /pt-BR/  302  Language=pt-BR
/  /pt-BR/  302  Language=pt

# Portuguese (Portugal)
/  /pt-PT/  302  Language=pt-PT

# Korean
/  /ko/  302  Language=ko

# Japanese
/  /ja/  302  Language=ja

# Chinese (Simplified) - matches zh, zh-CN, zh-Hans
/  /zh-CN/  302  Language=zh-CN
/  /zh-CN/  302  Language=zh-Hans
/  /zh-CN/  302  Language=zh

# Chinese (Traditional) - matches zh-TW, zh-Hant, zh-HK
/  /zh-TW/  302  Language=zh-TW
/  /zh-TW/  302  Language=zh-Hant
/  /zh-TW/  302  Language=zh-HK

# Arabic
/  /ar/  302  Language=ar

# Russian
/  /ru/  302  Language=ru

# Turkish
/  /tr/  302  Language=tr

# English (explicit match)
/  /en/  302  Language=en

# Default fallback to English
/  /en/  302
